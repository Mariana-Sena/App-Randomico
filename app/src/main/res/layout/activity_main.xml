<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Seção Pessoas -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pessoas"
            android:textStyle="bold"
            android:textSize="18sp"
            android:drawableLeft="@drawable/ic_person"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edtPerson"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:hint="Nome da pessoa"
                android:importantForAccessibility="yes"
                android:padding="12dp" />

            <ImageButton
                android:id="@+id/btnAddPerson"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_add_person"
                android:contentDescription="Adicionar pessoa"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:importantForAccessibility="yes"/>
        </LinearLayout>

        <ListView
            android:id="@+id/listPersons"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:divider="@android:color/darker_gray"
            android:choiceMode="singleChoice"
            android:listSelector="@android:color/holo_blue_light"
            android:importantForAccessibility="yes"/>

        <ImageButton
            android:id="@+id/btnRemovePerson"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_delete_person"
            android:contentDescription="Remover pessoa"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_gravity="end"
            android:importantForAccessibility="yes" />

        <!-- Seção Tarefas -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tarefas"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:drawableLeft="@drawable/ic_task"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edtTask"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:hint="Descrição da tarefa"
                android:importantForAccessibility="yes"
                android:padding="12dp" />

            <ImageButton
                android:id="@+id/btnAddTask"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_add_task"
                android:contentDescription="Adicionar tarefa"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:importantForAccessibility="yes"/>
        </LinearLayout>

        <ListView
            android:id="@+id/listTasks"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:divider="@android:color/darker_gray"
            android:choiceMode="singleChoice"
            android:listSelector="@android:color/holo_green_light"
            android:importantForAccessibility="yes"/>

        <ImageButton
            android:id="@+id/btnRemoveTask"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_delete_task"
            android:contentDescription="Remover tarefa"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_gravity="end"
            android:importantForAccessibility="yes" />

        <!-- Botão Delegar Tarefa -->
        <Button
            android:id="@+id/btnDelegate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delegar Tarefa Aleatória"
            android:drawableLeft="@drawable/ic_delegate"
            android:layout_marginTop="24dp"
            android:importantForAccessibility="yes"/>

        <!-- Resultado -->
        <TextView
            android:id="@+id/txtResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resultado aparecerá aqui"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:importantForAccessibility="yes"/>
    </LinearLayout>
</ScrollView>